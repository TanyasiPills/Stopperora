<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.stopperora.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <HBox spacing="10.0" alignment="CENTER_LEFT">
    <VBox alignment="TOP_LEFT" spacing="10.0" minWidth="100">
      <Button fx:id="top" text="Start" onAction="#onStart"/>
      <Button fx:id="bot" text="Stop" onAction="#onStop"/>
    </VBox>

    <Label fx:id="time" text="00:00.000" VBox.vgrow="ALWAYS" style="-fx-font-size: 24pt;"/>
  </HBox>

  <ListView fx:id="listView" prefHeight="300" prefWidth="200" VBox.vgrow="ALWAYS"/>
</VBox>
